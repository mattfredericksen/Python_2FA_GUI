<TextInputLine@TextInput>:
    text_validate_unfocus: False
    multiline: False
    write_tab: False

<PasswordInput@TextInputLine>:
    password: True
    allow_copy: False

<LoginScreen>:
    username: username_field.text
    password: password_field.text

    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Login Screen'
        TextInputLine:
            id: username_field
            hint_text: 'username'
            on_text_validate: root.on_enter()
        PasswordInput:
            id: password_field
            hint_text: 'password'
            on_text_validate: root.on_enter()
        Button:
            id: login_button
            text: 'Login'
            on_press:
                root.attempt_login()
        Button:
            text: 'Create Account'
            on_press: root.switch_to_create_account()

<VerificationScreen>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            id: label
            text: 'Please enter the verification code sent to phone ending with {}'
        TextInputLine:
            id: code_field
            on_text_validate: root.on_enter()
        Button:
            id: submit_button
            text: 'Submit'
            on_press: root.verify_code()

<CreateAccountScreen>:
    username: username_field.text
    password: password_field.text
    phone: phone_field.text

    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Create Account Screen'
        TextInputLine:
            id: username_field
            hint_text: 'username'
            on_text_validate: root.on_enter()
        PasswordInput:
            id: password_field
            hint_text: 'password'
            on_text_validate: root.on_enter()
        PhoneInput:
            id: phone_field
            hint_text: 'phone number'
            on_text_validate: root.on_enter()
            multiline: False
            write_tab: False
        Button:
            id: create_account_button
            text: 'Create Account'
            on_press: root.attempt_creation()
        Button:
            text: 'Already have an account?'
            on_press: root.switch_to_login()
